<!--      <class name="com.amit.portfolio.tests.SubscriptionTests"/>-->
<!--      <class name="com.amit.portfolio.tests.ContactUsTests"/>-->
    </classes>
  </test>

  <test name="Edge Tests">
    <parameter name="browser" value="edge"/>
    <classes>
