<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Automation Exercise Parallel Browsers" parallel="none" thread-count="2">
  <!-- Runs the same test classes in 2 different browsers in parallel (one thread per <test>) -->

  <test name="Chrome Tests">
    <parameter name="browser" value="chrome"/>
    <classes>
        <class name="tests.RegistrationTests"/>
        <class name="tests.CartTests"/>
        <class name="tests.ProductsTests"/>
        <class name="tests.SubscriptionTests"/>
    </classes>
  </test>

  <test name="Edge Tests">
    <parameter name="browser" value="edge"/>
    <classes>
        <class name="tests.RegistrationTests"/>
        <class name="tests.CartTests"/>
        <class name="tests.ProductsTests"/>
        <class name="tests.SubscriptionTests"/>
    </classes>
  </test>
</suite>
