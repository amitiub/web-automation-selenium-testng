<!--      <class name="com.amit.portfolio.tests.LogoutTests"/>-->
<!--      <class name="com.amit.portfolio.tests.NavigationTests"/>-->
      <class name="com.amit.portfolio.tests.ProductTests"/>
      <class name="com.amit.portfolio.tests.CartTests"/>
